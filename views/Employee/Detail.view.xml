					<m:Button icon="my-view" text="33333333" />
				</main:Tab>
				 </main:TabContainer>
				
				</m:VBox> -->
		</headerContent>
	

		<sections>
			<ObjectPageSection class="scroll"  titleUppercase="false" title="2014 Goals Plan">
				<subSections>
					<ObjectPageSubSection titleUppercase="false">
						<blocks>
							<goals:BlockDetailPart1 />
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection titleUppercase="false" title="Employment">
				<subSections>
					
					<ObjectPageSubSection title="Employee Details" titleUppercase="false">
						<blocks>
							<employment:BlockDetailPart1 id="empdetailpart1" />
						</blocks>
						
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

		

			<ObjectPageSection titleUppercase="false" title="Table information">
				<subSections>
					<ObjectPageSubSection title="Personal Belongings" titleUppercase="false">
					<ui:Table id="idProductsTable"
						visibleRowCountMode="Auto"
						minAutoRowCount="2"
						rows="{
							path: 'TableModel>/ProductCollection',
							sorter: {
								path: 'Name'
							}
						}">
						<ui:extension>
							<m:OverflowToolbar style="Clear">
									<m:Title id="title" text="Products"/>
										<m:ToolbarSpacer/>
																<m:Button
							icon="sap-icon://sorting-ranking"
							tooltip="Sort ascending across Categories and Name"
							press="sortCategoriesAndName"/>
						<m:Button
							icon="sap-icon://sort"
							tooltip="Sort Categories in addition to current sorting"
							press="sortCategories"/>
						<m:Button
							icon="sap-icon://decline"
							tooltip="Clear all sortings"
							press="clearAllSortings"/>
							</m:OverflowToolbar>
						 </ui:extension>
						 <ui:columns>
						 	<ui:Column
						id="name"
						width="11rem"
						sortProperty="Name">
						<m:Label text="Product Name" />
						<ui:template>
							<m:Text text="{Name}" wrapping="false" />
						</ui:template>
					</ui:Column>

					<ui:Column
						id="categories"
						width="11rem"
						showSortMenuEntry="false"
						sortProperty="Category">
						<m:Label text="Category" />
						<ui:template>
							<m:Text text="{Category}" wrapping="false" />
						</ui:template>
					</ui:Column>


						<ui:Column width="11rem">
						<m:Label text="Product Id" />
						<ui:template>
							<m:Input value="{age}"/>
						</ui:template>
					</ui:Column>

					<ui:Column width="9rem">
						<m:Label text="Status" />
						<ui:template>
							<m:ObjectStatus text="{Status}" state="{
								path: 'Available',
								formatter: '.formatAvailableToObjectState'
							}"/>
						</ui:template>
					</ui:Column>

					<ui:Column width="9rem">
						<m:Label text="Details" />
						<ui:template>
							<m:Button text="Show Details" press="handleDetailsPress"/>
						</ui:template>
					</ui:Column>

					<ui:Column width="11rem" hAlign="Center">
						<m:Label text="Delivery Date" />
						<ui:template>
							<m:DatePicker value="{
								path: 'DeliveryDate',
								type: 'sap.ui.model.type.Date',
								formatOptions: {source: {pattern: 'timestamp'}}
							}"/>
						</ui:template>
					</ui:Column>
				 </ui:columns>
				</ui:Table>
				</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

		</sections>
	</ObjectPageLayout>
</mvc:View>
