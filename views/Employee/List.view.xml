<mvc:View controllerName="sap-app.controllers.Employee.List" xmlns:df="it.designfuture.qrcode" xmlns:forms="sap.ui.layout.form" xmlns:uxap="sap.uxap" xmlns:l="sap.ui.layout" xmlns="sap.ui.table" xmlns:mvc="sap.ui.core.mvc" xmlns:u="sap.ui.unified" xmlns:c="sap.ui.core" xmlns:m="sap.m" height="100%" xmlns:main="sap.ui.webc.main" >
 
   <m:FlexBox width="100%" >
   
	<m:VBox fitContainer="true">
	<m:layoutData>
					<m:FlexItemData
						growFactor=".5"
						baseSize="0"
						backgroundDesign="Solid"
						styleClass="sapUiTinyMargin" />
				</m:layoutData>
				<m:OverflowToolbar class="sapFDynamicPageAlignContent">
					<m:ToolbarSpacer/>
					<m:SearchField search=".onSearch" width="17.5rem"/>
					<m:OverflowToolbarButton icon="sap-icon://sort" text="Sort" type="Transparent" press=".onSort"/>
					<!-- <m:OverflowToolbarButton icon="sap-icon://add" id="openBtn" text="Add" type="Transparent" press=".onAdd"/> -->
					
					    <m:Button id="openBtn" 
						icon="sap-icon://add" text="Add"  type="Transparent" press=".handleOpen"/>
						
						
				
				</m:OverflowToolbar>
				<m:Table
					id="productsTable"
					inset="false"
					items="{
						path: 'products>/ProductCollection',
						sorter: {
							path: 'Name'
						}
					}"
					class="sapFDynamicPageAlignContent"
					width="auto">
					<m:columns>
						<m:Column width="12em">
							<m:Text text="Product"/>
						</m:Column>
						<m:Column	hAlign="End">
							<m:Text text="Price sas"/>
						</m:Column>
					</m:columns>
					<m:items>
						<m:ColumnListItem type="Navigation" press=".onListItemPress">
							<m:cells>
								<m:ObjectIdentifier title="{products>Name}" text="{products>Position}"/>
								<m:ObjectIdentifier title="{products>employeeId}" text="{products>Department}"/>
								<!-- <m:ObjectNumber
									number="{
										parts:[
											{path:'products>Price'},
											{path:'products>CurrencyCode'}
										],
										type: 'sap.ui.model.type.Currency',
										formatOptions: {showMeasure: false}
									}"
									unit="{products>CurrencyCode}"/> -->
							</m:cells>
						</m:ColumnListItem>
					</m:items>
				</m:Table>
			</m:VBox>
    <m:Page id="product-content">
    <m:layoutData>
					<m:FlexItemData
						growFactor="1"
						baseSize="0"
						backgroundDesign="Solid"
						styleClass="sapUiTinyMargin" />
				</m:layoutData>
        <m:content></m:content>
    </m:Page>
   </m:FlexBox>
   	<l:VerticalLayout class="sapUiContentPadding">
		<main:Dialog width='500px'	 id="helloDialog" resizable="true" draggable="true" headerText="Thêm thành viên">
		<l:VerticalLayout id="styleAdd" class='styleAdd'>
			<main:Label for="username" showColon="true" text="Username" />
				<main:Input id="username" placeholder="Enter username" />
				<main:Label for="sdt" showColon="true" text="Số điện thoại" />

				<main:Input id="sdt" placeholder="Enter Number phone" />

				<main:Label for="password" showColon="true" text="Password" />
				<main:Input id="password" type="Password" placeholder="Enter password" />
				<main:Label for="email" showColon="true" text="Email" />
				<main:Input id="email" placeholder="Enter e-mail" />
					
			</l:VerticalLayout>
						<main:footer>
				<main:Button design="Emphasized" click=".handleClose" text="Submit"
					class="sapUiTinyMarginTop sapUiTinyMarginBottom" />
			</main:footer>
		</main:Dialog>
		</l:VerticalLayout>

</mvc:View>
