<mvc:View controllerName="sap-app.controllers.Employee.List" xmlns:df="it.designfuture.qrcode" xmlns="sap.ui.table" xmlns:mvc="sap.ui.core.mvc" xmlns:u="sap.ui.unified" xmlns:c="sap.ui.core" xmlns:m="sap.m" height="100%">

   <m:FlexBox width="100%" class="min-h-100vh">
  
	<m:VBox fitContainer="true">
	<m:layoutData>
					<m:FlexItemData
						growFactor=".5"
						baseSize="0"
						backgroundDesign="Solid"
						styleClass="sapUiTinyMargin" />
				</m:layoutData>
				<m:OverflowToolbar class="sapFDynamicPageAlignContent">
					<m:ToolbarSpacer/>
					<m:SearchField search=".onSearch" width="17.5rem"/>
					<m:OverflowToolbarButton icon="sap-icon://add" text="Add" type="Transparent" press=".onAdd"/>
					<m:OverflowToolbarButton icon="sap-icon://sort" text="Sort" type="Transparent" press=".onSort"/>
				</m:OverflowToolbar>
				<m:Table
					id="productsTable"
					inset="false"
					items="{
						path: 'products>/SAP_DATA',
						sorter: {
							path: 'Name'
						}
					}"
					class="sapFDynamicPageAlignContent"
					width="auto">
					<m:columns>
						<m:Column width="12em">
							<m:Text text="Product"/>
						</m:Column>
						<m:Column	hAlign="End">
							<m:Text text="Price"/>
						</m:Column>
					</m:columns>
					<m:items>
						<m:ColumnListItem type="Navigation" press=".onListItemPress">
							<m:cells>
								<m:ObjectIdentifier title="{products>ENAME}" text="{products>DEPARTMENT}"/>
								<m:ObjectIdentifier title="{products>EMAIL}" text="{products>ADDRESS}"/>
								<!-- <m:ObjectNumber
									number="{
										parts:[
											{path:'products>Price'},
											{path:'products>CurrencyCode'}
										],
										type: 'sap.ui.model.type.Currency',
										formatOptions: {showMeasure: false}
									}"
									unit="{products>CurrencyCode}"/> -->
							</m:cells>
						</m:ColumnListItem>
					</m:items>
				</m:Table>
			</m:VBox>
    <m:Page id="product-content">
    <m:layoutData>
					<m:FlexItemData
						growFactor="1"
						baseSize="0"
						backgroundDesign="Solid"
						styleClass="sapUiTinyMargin" />
				</m:layoutData>
        <m:content></m:content>
    </m:Page>
   </m:FlexBox>
   
	

</mvc:View>