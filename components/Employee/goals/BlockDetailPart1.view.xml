<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	controllerName="sap-app.components.Employee.goals.BlockDetailPart1"

	xmlns:core="sap.ui.core">
	<VBox class="sapUiSmallMargin">
		<f:Form id="FormChange354wideDual"
			editable="true">
			<f:title>
				<core:Title text="Persional Data" />
			</f:title>
			<f:layout>
				<f:ResponsiveGridLayout
					labelSpanXL="4"
					labelSpanL="3"
					labelSpanM="4"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="0"
					emptySpanL="4"
					emptySpanM="0"
					emptySpanS="0"
					columnsXL="2"
					columnsL="1"
					columnsM="1"
					singleContainerFullSize="false" />
			</f:layout>
			<f:formContainers>
			
				<f:FormContainer title="Thông tin cá nhân">
					<f:formElements>
						<f:FormElement label="Họ và tên">
							<f:fields>
								<Input value="{/ENAME}" id="name"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Email">
							<f:fields>
								<Input value="{/EMAIL}" id="email"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Số điện thoại">
							<f:fields>
								<Input value="{/PHONENUMBER}" />
								<Input value="{/DEPARTMENT}">
									<layoutData>
										<l:GridData span="XL1 L2 M2 S4" />
									</layoutData>
								</Input>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="ZIP Code City">
							<f:fields>
								<Input value="{/EMPLOYEEID}">
									<layoutData>
										<l:GridData span="XL1 L2 M2 S4" />
									</layoutData>
								</Input>
								<Input value="{/SORT_DES}" />
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Địa chỉ">
							<f:fields>
								<Input value="{/ADDRESS}" />
							</f:fields>
						</f:FormElement>
					</f:formElements>
				
					
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
	</VBox>
</core:FragmentDefinition>