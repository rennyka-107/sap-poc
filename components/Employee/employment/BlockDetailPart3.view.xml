<mvc:View
	controllerName="sap-app.controllers.Employee.Detail"
	xmlns:mvc="sap.ui.core.mvc"
	 xmlns:p13n="sap.m.p13n"
	xmlns="sap.m"
	xmlns:m="sap.ui.webc.main"
>
	<Panel
		expandable="true"
		headerText="Retirement"
	>
		<headerToolbar>
			<Toolbar>
				<Title text="Sample Salary Grades for this position"/>
			</Toolbar>
		</headerToolbar>
			<content>
			  <VBox>
			  	<m:MessageStrip
					text="Here some likely Salary Grades for this job. You can pick one of these or provide your own Salary Values"
					design="Information"
					close="handleClose"
				/>
				<FlexBox
					wrap="Wrap"
					height="48px"
					justifyContent="SpaceBetween"
					alignItems="Center"
				>
					<Text
						text="Plan code"
						width="106px"
						textAlign="Center"
					/>
					<Text text="Descripiton"/>
					<Text text="Enrolled"/>
				</FlexBox>
				<List items="{/SAMPLESALARY}">
				<CustomListItem>
				  <FlexBox justifyContent="SpaceBetween" alignItems="Center">
				  <RadioButton groupName="health" text="{GRADE}"/>
					<Text text="{AMOUNTPERPERIOD}"/>
					<Text text="{HOURSPERWEEK}"/>
				  </FlexBox>
				</CustomListItem>
				</List>
 			 </VBox>
		</content>
	</Panel>
			<Label text="Grade" />
			<Input enabled="{DetailEmployee>/isEditing}" valueLiveUpdate="true" width="100%" value="{salary>/GRADE}"/>
			<Label text="Hours/Week: Period"/>
			<Input enabled="{DetailEmployee>/isEditing}" valueLiveUpdate="true" value="{salary>/HOURSPERWEEK}" width="100%"/>
			<Label text="Amount/Period: USD "/>
			<Input enabled="{DetailEmployee>/isEditing}" valueLiveUpdate="true" value="{salary>/AMOUNTPERPERIOD}" width="100%"/>
			<Label text="Annual/Salary: USD "/>
			<Input enabled="{DetailEmployee>/isEditing}" valueLiveUpdate="true" value="{salary>/SALARYPERYEAR}" width="100%"/>
			<Button visible="{DetailEmployee>/isEditing}" text="Submit" press=".handleSubmit"/>
 
</mvc:View>