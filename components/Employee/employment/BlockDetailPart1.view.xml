<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	controllerName="sap-app.components.Employee.employment.BlockDetailPart1"
	xmlns:core="sap.ui.core">
		
		
	 <FlexBox width="800px" > 
			 
			 <VBox  fitContainer="true">
					<layoutData>
					<FlexItemData
					growFactor="1"
					baseSize="0"
					backgroundDesign="Solid"
					styleClass="sapUiTinyMargin" />
				</layoutData> 
				<Title text="Home Address" />
			<Input value="{/ADDRESS}" id="name"/>
				<Label text="Street/No." />
				<Input value="{/DEPARTMENT}">
				</Input>
				<Input value="{/PHONENUMBER}">
					<layoutData>
						<f:ColumnElementData cellsSmall="2" cellsLarge="1" />
					</layoutData>
				</Input>
				<Label text="ZIP Code/City" />
				<Input value="{/EMPLOYEEID}">
					<layoutData>
						<f:ColumnElementData cellsSmall="3" cellsLarge="2" />
					</layoutData>
				</Input>
				<Input value="{/SORT_DES}" />
				<Label text="Country" />
				<Select id="country" selectedKey="{Country}">
					<items>
						<core:Item text="England" key="England"/>
						<core:Item text="Germany" key="Germany"/>
						<core:Item text="USA" key="USA"/>
					</items>
				</Select>
				<Label text="Web" />
				<Input value="{/AVATAR}" type="Url"/>
				</VBox>
				
				 <VBox fitContainer="true">
					<layoutData>
					<FlexItemData
						growFactor="1"
						baseSize="0"
						backgroundDesign="Solid"
						styleClass="sapUiTinyMargin" />
				</layoutData> 
				<Title text="Coppy to Mailling" />
		
			<Button icon="laptop" text="Coppy to" />
				
				</VBox>
				

		 <VBox fitContainer="true">
				<layoutData>
					<FlexItemData
						growFactor="1"
						baseSize="0"
						backgroundDesign="Solid"
						styleClass="sapUiTinyMargin" />
				</layoutData> 
			<Title text="Contact" />
			
				<Input value="{/ADDRESS /EMPLOYEEID}" />
				<Label text="Email" />
				<Input value="{/EMAIL}" type="Email"/>
				<Label text="Tel." />
				<Input value="{/PHONENUMBER}" type="Tel"/>
			</VBox>
		</FlexBox>
</core:FragmentDefinition>