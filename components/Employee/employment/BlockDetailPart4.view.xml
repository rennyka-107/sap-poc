		headerText="Retirement"
	>
		<headerToolbar>
			<Toolbar>
				<Title text="Retirement"/>
			</Toolbar>
		</headerToolbar>
		<content>
			<VBox class="sapUiTinyMargin">
			<FlexBox alignItems="Center">
					<Text text='Plan Ebility' width="100px"/>
					<Switch state="{/retirement}" customTextOn="On" customTextOff="Off" change="handleChangeRetirement">
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
					</Switch>
				</FlexBox>
				<m:MessageStrip
					text="Information with default icon and no close button"
					design="Information"
					close="handleClose"
				/>

				<FlexBox
					wrap="Wrap"
					height="48px"
					justifyContent="SpaceBetween"
					alignItems="Center"
				>
					<Text
						text="Plan code"
						width="106px"
						textAlign="Center"
					/>
					<Text text="Descripiton"/>
					<Text text="Enrolled"/>
				</FlexBox>
				<FlexBox
					wrap="Wrap"
					justifyContent="SpaceBetween"
					alignItems="Center"
				>
				
					<RadioButton 
					groupName="retirement"
						id="RB1-1"
						text="RET0293"
