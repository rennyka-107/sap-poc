<mvc:View
	controllerName="sap-app.components.Employee.employment.BlockDetailPart4"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"	
	xmlns:m="sap.ui.webc.main"
>
	<Panel
		expandable="true"
		headerText="Retirement"
	>
		<headerToolbar>
			<Toolbar>
				<Title text="Retirement"/>
			</Toolbar>
		</headerToolbar>
			<content>
			  <VBox>
				<List items="{/RETITEMENT}">
				<CustomListItem>
				  <FlexBox justifyContent="SpaceBetween" alignItems="Center">
				  <RadioButton groupName="retirement" text="{PLANCODE}" enabled="{/health}"/>
					<Text text="{DESCRIPTION}"/>
					<Text text="{ENDROLLED}"/>
				  </FlexBox>
				</CustomListItem>
				</List>
 			 </VBox>
		</content>
	</Panel>
	<Panel
		expandable="true"
		headerText="Savings"
	>
		<headerToolbar>
			<Toolbar>
				<Title text="Savings"/>
			</Toolbar>
		</headerToolbar>
		<content>
			  <VBox>
				<List items="{/SAVINGS}">
				<CustomListItem>
				  <FlexBox justifyContent="SpaceBetween" alignItems="Center">
				  <RadioButton groupName="savings" text="{PLANCODE}" enabled="{/health}"/>
					<Text text="{DESCRIPTION}"/>
					<Text text="{ENDROLLED}"/>
				  </FlexBox>
				</CustomListItem>
				</List>
 			 </VBox>
		</content>
	</Panel>
	<Panel
		expandable="true"
		headerText="Health"
	>
		<headerToolbar>
			<Toolbar>
				<Title text="Health"/>
			</Toolbar>
		</headerToolbar>
		<content>
			  <VBox>
			  <FlexBox alignItems="Center">
					<Text text='Plan Ebility' width="100px"/>
					<Switch enabled="{DetailEmployee>/isEditing}" state="{/health`}" customTextOn="On" customTextOff="Off" change=".handleChange">
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
					</Switch>
				</FlexBox>
			  	<m:MessageStrip
					text="Here some likely Salary Grades for this job. You can pick one of these or provide your own Salary Values"
					design="Information"
					close="handleClose"
				/>
				<List items="{/HEALTH}">
				<CustomListItem>
				  <FlexBox justifyContent="SpaceBetween" alignItems="Center">
				  <RadioButton groupName="health" text="{PLANCODE}" enabled="{/health}"/>
					<Text text="{DESCRIPTION}"/>
					<Text text="{ENDROLLED}"/>
				  </FlexBox>
				</CustomListItem>
				</List>
 			 </VBox>
		</content>
	</Panel>
</mvc:View>